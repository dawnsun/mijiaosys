<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mijiaokj.sys.dal.repository.mapper.FileMapper">

	<sql id="BaseColumns">
		file_name,
		file_suffix,
		file_size,
		file_path
	</sql>

	<sql id="BaseProperties">
		#{fileName},
		#{fileSuffix},
		#{fileSize},
		#{filePath}
	</sql>
	
	<resultMap id="BaseResultMap" type="com.mijiaokj.sys.domain.File">
		<result column="file_name" property="fileName" jdbcType="VARCHAR" />
		<result column="file_suffix" property="fileSuffix" jdbcType="VARCHAR" />
		<result column="file_size" property="fileSize" jdbcType="VARCHAR" />
		<result column="file_path" property="filePath" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select *
		from file
		where id = #{id,jdbcType=BIGINT}
		and is_delete = 0
	</select>

	<insert id="insert" parameterType="com.mijiaokj.sys.domain.File">
		insert into file (
		<include refid="BaseColumns" />
		,
		<include refid="Common.CommonColumns" />
		)
		values (
		<include refid="BaseProperties" />
		,
		<include refid="Common.CommonProperties" />
		)
	</insert>

	<update id="delete" parameterType="java.lang.Long">
		update file
		set is_delete = 1
		where id = #{id,jdbcType=BIGINT}
	</update>

</mapper>