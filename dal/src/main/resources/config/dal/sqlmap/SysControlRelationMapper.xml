<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mijiaokj.sys.dal.repository.mapper.SysControlRelationMapper">
	<sql id="BaseColumns">
		sys_id,
		control_id
	</sql>

	<sql id="BaseProperties">
		#{sysId},
		#{controlId}
	</sql>

	<resultMap id="BaseResultMap" type="com.mijiaokj.sys.domain.SysControlRelation">
		<result column="sys_id" property="sysId" jdbcType="BIGINT" />
		<result column="control_id" property="controlId" jdbcType="BIGINT" />
	</resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select *
		from sys_control_relation
		where id = #{id,jdbcType=BIGINT}
		and
		is_delete
		= 0
	</select>

	<insert id="insert" parameterType="com.mijiaokj.sys.domain.SysControlRelation">
		insert into sys_control_relation (
		<include refid="BaseColumns" />
		,
		<include refid="Common.CommonColumns" />
		)
		values (
		<include refid="BaseProperties" />
		,
		<include refid="Common.CommonProperties" />
		)
	</insert>

	<update id="delete" parameterType="java.lang.Long">
		update sys_control
		set
		is_delete = 1
		where id = #{id,jdbcType=BIGINT}
	</update>
</mapper>