<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mijiaokj.sys.dal.repository.mapper.PageMapper">
	<sql id="BaseColumns">
		page_code,
		page_name,
		page_order
	</sql>

	<sql id="BaseProperties">
		#{pageCode},
		#{pageName},
		#{pageOrder}
	</sql>

	<resultMap id="BaseResultMap" type="com.mijiaokj.sys.domain.Page">
		<result column="page_code" property="pageCode" jdbcType="VARCHAR" />
		<result column="page_name" property="pageName" jdbcType="VARCHAR" />
		<result column="page_order" property="pageOrder" jdbcType="INTEGER" />
	</resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select *
		from page
		where id = #{id,jdbcType=BIGINT}
		and is_delete = 0
	</select>

	<insert id="insert" parameterType="com.mijiaokj.sys.domain.Page">
		insert into page
		<include refid="BaseColumns" />
		,
		<include refid="Common.CommonColumns" />
		)
		values (
		<include refid="BaseProperties" />
		,
		<include refid="Common.CommonProperties" />
		)
	</insert>

	<update id="delete" parameterType="java.lang.Long">
		update page
		set is_delete = 1
		where id = #{id,jdbcType=BIGINT}
	</update>
</mapper>