<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mijiaokj.sys.dal.repository.mapper.SysControlMapper">
	<sql id="BaseColumns">
		control_name,
		control_type,
		control_abstract
	</sql>

	<sql id="BaseProperties">
		#{controlName},
		#{controlType},
		#{controlAbstract}
	</sql>

	<resultMap id="BaseResultMap" type="com.mijiaokj.sys.domain.SysControl">
		<result column="control_name" property="controlName" jdbcType="VARCHAR" />
		<result column="control_type" property="controlType" jdbcType="VARCHAR" />
		<result column="control_abstract" property="controlAbstract"
			jdbcType="VARCHAR" />
	</resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select *
		from sys_control
		where id = #{id,jdbcType=BIGINT}
		and is_delete
		= 0
	</select>

	<insert id="insert" parameterType="com.mijiaokj.sys.domain.SysControl">
		insert into sys_control (
		<include refid="BaseColumns" />
		,
		<include refid="Common.CommonColumns" />
		)
		values (
		<include refid="BaseProperties" />
		,
		<include refid="Common.CommonProperties" />
		)
	</insert>

	<update id="delete" parameterType="java.lang.Long">
		update sys_control
		set is_delete = 1
		where id = #{id,jdbcType=BIGINT}
	</update>

</mapper>