<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mijiaokj.sys.dal.repository.mapper.SysUserRoleRelationMapper">
	<sql id="BaseColumns">
		user_id,
		role_id
	</sql>

	<sql id="BaseProperties">
		#{userId},
		#{roleId}
	</sql>

	<resultMap id="BaseResultMap" type="com.mijiaokj.sys.domain.SysUserRoleRelation">
		<result column="user_id" property="userId" jdbcType="BIGINT" />
		<result column="role_id" property="roleId" jdbcType="BIGINT" />
	</resultMap>

	<select id="getById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select *
		from sys_user_role_relation
		where id = #{id,jdbcType=BIGINT}
		and
		is_delete
		= 0
	</select>

	<insert id="insert" parameterType="com.mijiaokj.sys.domain.SysUserRoleRelation">
		insert into sys_user_role_relation (
		<include refid="BaseColumns" />
		,
		<include refid="Common.CommonColumns" />
		)
		values (
		<include refid="BaseProperties" />
		,
		<include refid="Common.CommonProperties" />
		)
	</insert>

	<update id="delete" parameterType="java.lang.Long">
		update sys_user_role_relation
		set
		is_delete =
		1
		where id = #{id,jdbcType=BIGINT}
	</update>

</mapper>